generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserTool {
  id          Int      @id @default(autoincrement())
  userEmail   String
  categoryId  String
  toolName    String
  toolUrl     String
  iconUrl     String?
  createdAt   DateTime @default(now())
  
  @@map("user_tools")
}
